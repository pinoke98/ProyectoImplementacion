<%- include('../_partials/_header'); -%>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Rectangulo</h3>
            </div>
            <div class="panel-body">
                <form class="form">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon7">#</span>
                        <input type="number" step = "0.01" class="form-control" placeholder="Largo" name="Largo" id="Largo" aria-describedby="basic-addon1" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon8">#</span>
                        <input type="number" step = "0.01" class="form-control" placeholder="Ancho" name="Ancho" id="Ancho" aria-describedby="basic-addon1" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">=</span>
                        <input type="text" class="form-control" placeholder="Area " id = 'area'  aria-describedby="basic-addon1" disabled>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">=</span>
                        <input type="text" class="form-control" placeholder="Perimetro " id = 'Perimetro'  aria-describedby="basic-addon1" disabled>
                    </div>
                    <br /> 
                    <input type="button" class="btn btn-default navbar-btn" value="Submit" onclick="fetchRectangulo()"/>
                    <script>
                        function fetchRectangulo(){
                            var Largo = document.getElementById('Largo');
                            var Ancho = document.getElementById('Ancho');
                            var data = {
                                Largo:Largo.value,
                                Ancho:Ancho.value
                            }
                            data = new URLSearchParams(Object.entries(data)).toString()
                            fetch('calculos/CalcRectangulo',{
                                method: 'POST',
                                headers:{
                                    'Content-Type': 'application/x-www-form-urlencoded'
                                },
                                body: data
                            }).then(res => res.json()).then(data => {
                                document.getElementById('area').value = data['area'],
                                document.getElementById('Perimetro').value = data['perimetro']
                            }).catch(err => console.log(err));
                        }
                    </script> 
                </form>
            </div>
        </div>
    </div>
<%- include ('../_partials/_footer'); -%>