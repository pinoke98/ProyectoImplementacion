<%- include('../_partials/_header'); -%>
    <div class="col-md-8">
        <div class="panel panel-default">

            <div class="panel-heading">
                <h3>Circulo</h3>
            </div>
            <div class="panel-body">
                <form class="form">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon6">#</span>
                        <input type="number" step = "0.01" class="form-control" placeholder="Radio" name="Radio" id ='radio' aria-describedby="basic-addon1" required>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">=</span>
                        <input type="text" class="form-control" placeholder="Area " id = 'area'  aria-describedby="basic-addon1" disabled>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">=</span>
                        <input type="text" class="form-control" placeholder="Perimetro " id = 'Perimetro'  aria-describedby="basic-addon1" disabled>
                    </div>
                    <br />
                    <input type="button" class="btn btn-default navbar-btn" value="Submit" onclick="fetchCirculo()"/>
                    <script>
                        function fetchCirculo(){
                            var radio = document.getElementById('radio');
                            var data = {Radio:radio.value}
                            data = new URLSearchParams(Object.entries(data)).toString()
                            fetch('/calculos/CalcCirculo',{
                                method: 'POST',
                                headers:{
                                    'Content-Type': 'application/x-www-form-urlencoded'
                                },
                                body: data
                            }).then(res => res.json()).then(data => {
                                document.getElementById('area').value = data['area'],
                                document.getElementById('Perimetro').value = data['perimetro']
                            }).catch(err => console.log(err));
                        }
                    </script> 
                </form>
            </div>
        </div>
    </div>
<%- include ('../_partials/_footer'); -%>